{
  "name": "omniwall",
  "version": "1.0.0",
  "description": "OmniWall - 一个现代化的Electron桌面应用",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=5858",
    "debug": "electron . --remote-debugging-port=9222",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "electron",
    "desktop",
    "app"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@videojs/http-streaming": "^3.15.0",
    "electron-store": "^11.0.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-ffprobe": "^3.0.0",
    "video.js": "^8.15.0"
  },
  "build": {
      "appId": "com.yourcompany.omniwall",
      "productName": "OmniWall",
      "directories": {
        "output": "dist"
      },
      "files": [
        "src/**/*",
        "styles/**/*",
        "node_modules/**/*",
        "package.json"
      ],
      "win": {
        "target": [
          {
            "target": "nsis",
            "arch": ["x64"]
          }
        ],
        "icon": "src/assets/ico.ico"
      },
      "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
      }
    }
}
